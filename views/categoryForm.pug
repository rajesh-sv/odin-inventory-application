extends layout

block content
  h1=title

  form(method='POST')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', name='name' required value=(category.name || ''))
      label(for='description') Description:
      input#description.form-control(type='text', name='description' required value=(category.description || ''))
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg