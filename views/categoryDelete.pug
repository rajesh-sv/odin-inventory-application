extends layout

block content

  h1 #{title}: #{category.name}
  p= category.description

  if items.length

    p #[strong Delete the following spaceships before attempting to delete this category.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Spaceships
      dl
        each item in items
          dt
            a(href=item.url) #{item.name}
          dd #{item.description}

  else
    p Do you really want to delete this Category?

    form(method='POST')
      div.form-group
        input#categoryid.form-control(type='hidden', name='categoryid', value=category._id )

      button.btn.btn-primary(type='submit') Delete